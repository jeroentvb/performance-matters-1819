<% include head %>

    <link rel="icon" href="../images/oba.ico">
    <%# <link rel="stylesheet" href="../css/styles.min.css"> %>
    <title>OBA - Zoek een boek</title>
  </head>

  <body>
    <header>
      <h1>Zoek een boek</h1>
      <img src="./images/oba-logo.svg" class="logo" alt="oba-logo">
    </header>

    <main class="main main--home">
      <form class="form form--search" action="/search" method="post">
        <label for="book-title" class="form__label">Zoek een titel</label>
        <input type="text" id="book-title" class="form__input" name="book-title" placeholder="Titel van een boek" required>
        <input type="submit" id="search-book" name="search-book" class="form__submit button">
      </form>
    </main>

    <style>
      :root {
        --color-primary: #48656d;
        --color-secondary: #dfdad5;
      }

      body {
        font-family: 'Avenir', system-ui, sans-serif;
        margin: 0;
        padding: 1rem;
        font-size: 1rem;
      }

      @media (min-width: 900px) {
        body {
          padding: 0 10rem 2rem 10rem;
        }
      }

      @media (min-width: 1200px) {
        body {
          padding: 0 20rem 2rem 20rem;
        }
      }

      header {
        display: flex;
        flex-direction: row;
        align-items: center;
        margin: -1rem 0 0 -1rem;
        background-color: var(--color-secondary);
        width: 100%;
        padding: 1rem;
        clip-path: polygon(0 0, 100% 0%, 100% 70%, 0% 100%);
        padding-bottom: 3rem;
        padding-top: 2rem;
      }

      h1 {
        margin: 0;
        flex-grow: 1;
        margin-right: 1rem;
      }

      .logo {
        width: 5rem;
      }

      .main {
        width: calc(100% + -2rem);
        margin-left: -1rem;
        background-color: var(--color-primary);
        padding: 4rem 2rem 6rem 2rem;
        color: #fff;
      }

      .main--home {
        clip-path: polygon(0 10%, 100% 0%, 100% 90%, 0% 100%);
      }

      .button {
        background-color: #fff;
        color: var(--color-primary);
        font-weight: bold;
        border-radius: 30px;
        border: 2px solid var(--color-primary);
        text-decoration: none;
        padding: .5rem 1rem;
        display: inline-block;
        min-width: 8rem;
        text-align: center;
      }

      .button:hover {
        background-color: var(--color-secondary);
      }

      .form {
        display: flex;
        flex-direction: column;
      }

      .form__label {
        font-size: 1.4rem;
        color: var(--color-secondary);
      }

      .form__input {
        font-size: 1rem;
        padding: 1.5rem 2rem;
        border: none;
        background-color: #fff;
        margin-bottom: 2rem;
        border: 2px solid var(--color-secondary);
      }

      .form__submit {
        font-size: 1rem;
        padding: 1rem;
        background-color: #fff;
      }

      .form__submit:hover {
        background-color: var(--color-secondary);
        cursor: pointer;
      }
    </style>

<% include tail %>
